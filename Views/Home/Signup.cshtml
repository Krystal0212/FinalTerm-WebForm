                alert("Please fill in all the fields!");
                return false;
            }

            if (isNaN(sID)) {
                alert("ID must be a number");
                return false;
            }

            if(validName(username) == false){
                alert("Invalid name");
                return false;
            }

            if (!/^\w+([.-]?\w+)\w+([.-]?\w+)(.\w{2,3})+$/.test(email) ) {
                alert("Please enter a valid email address.");
                return false;
            }

            if (isNaN(gpa)) {
                alert("GPA must be a number");
                return false;
            }

            if (gpa < 0 || gpa > 10) {
                alert("GPA must be from 0 to 10");
                return false;
            }

            $("tbody").append("<tr><td>" + sID + "</td><td>" + username + "</td><td>" + email + "</td><td>" + gpa + "</td><td><button class='btn btn-danger btn-sm'>Delete</button></td></tr>");
            $("#sID").val("");
            $("#name").val("");
            $("#email").val("");
            $("#gpa").val("");
        });
    });
    </script>

</main>