
@{
    ViewBag.Title = "Log in";
}

<head>

    <style>

        .smallsize {
            font-size: 20px;
        }

        a {
            text-decoration: none;
            color : cyan;
        }

        .btn-outline-cyan {
            --bs-btn-color: #00e6e6;
            --bs-btn-border-color: #00e6e6;
            --bs-btn-hover-color: #000;
            --bs-btn-hover-bg: #00e6e6;
            --bs-btn-hover-border-color: #00e6e6;
            --bs-btn-focus-shadow-rgb: 13, 202, 240;
            --bs-btn-active-color: #000;
            --bs-btn-active-bg: #00e6e6;
        }

        .btn-outline-cyan:hover {
                color: white;
                background-color: cyan;
                border-color: cyan;
        } 
    </style>
</head>

<main aria-labelledby="title">
    <h2 id="title">@ViewBag.Title | <small class="smallsize" >@ViewBag.Message</small></h2>


    <p> </p>

    <form action="">
        <div class="form-group">
            <label for="username">Username</label>
            <input type="text" class="form-control" id="username" aria-describedby="emailHelp" placeholder="Enter username">
            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>

        <p> </p>

        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" class="form-control" id="password" placeholder="Password">
        </div>

        <p> </p>

        <div class="form-group">
            <label>
                Not have agent or reseller account yet ? Sign up
                <a href="./Signup">here</a>
            </label>
        </div>

        <p> </p>

        @*<button type="submit" class="btn btn-outline-cyan" id="button-cyan" onclick="location.href='@Url.Action("Index", "CurrentGoods")'">Submit</button>*@
        <button type="submit" class="btn btn-outline-cyan" id="button-cyan" action="" ">Submit</button>
    </form>



</main>